<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUpStep6Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:max="100"
            android:progress="24"
            android:progressBackgroundTint="@color/lightDark"
            android:progressTint="@color/darkestBlue" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-black"
            android:text="악기를 다룰 줄 아시나요?"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="희망하는 역할을 선택해주세요" />

        <Button
            android:id="@+id/btnExp1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_radius_text"
            android:backgroundTint="#E3F1FD"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="기타"
            android:textColor="@color/darkestBlue" />

        <Button
            android:id="@+id/btnExp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="드럼"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnExp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="보컬"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnExp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="베이스"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnExp5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="건반악기"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnInst6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="없음"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_button_darkest_blue"
            android:fontFamily="sans-serif-black"
            android:text="다음"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>