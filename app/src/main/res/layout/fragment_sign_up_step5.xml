<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUpStep5Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:max="100"
            android:progress="24"
            android:progressBackgroundTint="@color/lightDark"
            android:progressTint="@color/darkestBlue" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-black"
            android:text="활동 지역을 선택해주세요"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="해당 지역의 밴드를 알려드릴게요" />

        <Button
            android:id="@+id/btnState1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_radius_text"
            android:backgroundTint="#E3F1FD"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="서울"
            android:textColor="@color/darkestBlue" />

        <Button
            android:id="@+id/btnState2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="경기도"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnState3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="충청도"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnState4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="강원도"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnState5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="경상도"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnState6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_radius_text"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="전라도"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_button_darkest_blue"
            android:fontFamily="sans-serif-black"
            android:text="다음"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>